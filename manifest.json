{
  "manifest_version": 3,
  "name": "Vue Auth App",
  "version": "1.0.0",
  "description": "Authentication Chrome Extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "cookies",
      "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
     "https://*.overleaf.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.overleaf.com/*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}